@page
@model QuizApp.Pages.Questions.CreateModel

@{
    ViewData["Title"] = "Create";

}

<h1>Create</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Question.Description" class="control-label"></label>
                <input asp-for="Question.Description" class="form-control" />
                <span asp-validation-for="Question.Description" class="text-danger"></span>
            </div>
            @for(int i=0; i<4; i++)
            {
                <div class="form-group">
                    <label asp-for="Answers[i].Option" class="control-label">Option @(i+1)</label>
                    <input asp-for="Answers[i].Option" class="form-control" />
                    <span asp-validation-for="Answers[i].Option" class="text-danger"></span>
                </div>
            }     
            <div class="form-group">
                <label asp-for="AnswerKey.Key" class="control-label"></label>
                <input asp-for="AnswerKey.Key" class="form-control" />
                <span asp-validation-for="AnswerKey.Key" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.QuizId" class="control-label"></label>
                <select asp-for="Question.QuizId" class ="form-control" asp-items="ViewBag.QuizId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
