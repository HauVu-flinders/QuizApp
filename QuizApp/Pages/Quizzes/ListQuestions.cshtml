@page
@model QuizApp.Pages.Quizzes.ListQuestionsModel
@{
    int QuestionNumber = 1;
}
<form method="post">
   @foreach (var item in Model.Questions)
        {
            <div class="card btn-outline-success">
                <div class="card-body">
                    <p>@QuestionNumber. @Html.DisplayFor(modelItem => item.Description)</p>
                @if(item.Answers !=null)
                {
                    @foreach (var answer in item.Answers)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="option_@answer.Id" name="@item.Id" value="@answer.Option">
                            <label class="form-check-label" for="option_@answer.Id">@answer.Option</label>
                        </div>
                    }
                }
                </div>
            </div>
            <br />
        QuestionNumber++;
        }
        <button type="submit" class="btn btn-primary">Submit</button>
</form>

