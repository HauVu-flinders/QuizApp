@page
@model QuizApp.Pages.Quizzes.ListQuizzesModel

@{
    ViewData["Title"] = "ListQuizzes";
}

<h1 class="text-center mb-4">What will you learn today?</h1>
<div class="row">
    @foreach (var item in Model.Quiz)
    {
        <div class="col">
            <div class="card">
                <img class="card-img-top" src=@item.ImageUrl alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <a asp-page="./ListQuestions" asp-route-id="@item.Id" class="btn bg-info">Take the quiz</a>
                </div>
            </div>
        </div>
    }
</div>
